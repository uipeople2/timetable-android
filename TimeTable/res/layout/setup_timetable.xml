<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#eeeeee" 
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/layout"
    > 
     
 <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#434343"
    >
 <Button
    android:id="@+id/back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@+drawable/addclass_back2x" 
    android:text="Back"
    android:gravity="center"
    android:textColor="@+color/cream"
    android:textStyle="bold"
	android:textSize="17dip"
    android:layout_centerVertical="true"
    android:layout_margin="20dip"
     />
 <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@+string/timetable_add" 
    android:textSize="20sp"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:textColor="@+color/cream"
    android:textStyle="bold"
    />   
     <Button
    android:id="@+id/save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@+drawable/addclass_save2x" 
    android:text="Save"
    android:gravity="center"
    android:textColor="@+color/cream"
    android:textStyle="bold"
	android:textSize="17dip"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true" 
    android:layout_margin="20dip"
     />
</RelativeLayout>

 <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    >
    <ImageView
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@+drawable/add_circle"
    		android:layout_gravity="center_vertical"
    		android:layout_marginLeft="10dip"
    		>
        </ImageView>
    	<TextView
			android:layout_width="70dip"
    		android:layout_height="wrap_content"
    		android:text="@+string/subject"
    		android:textSize="20sp"
    		android:textStyle="bold" 
    	    android:textColor="#707070"
    		android:padding="15dip"
    	>
		</TextView>
		<EditText 
		    android:id="@+id/subject"
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:hint="@+string/subject"
    		android:textSize="20sp"
    		android:padding="5dip"
    		android:singleLine="true"
    		android:layout_weight="9"
    		
		    />
		<ImageView 
		    android:id="@+id/color"
		    android:layout_width="90dip"
    		android:layout_height="fill_parent"
    		android:background="#ffffff"		
    		android:layout_marginLeft="10dip"
    		android:layout_marginTop="6dip"
    		android:layout_marginBottom="10dip"
    		android:layout_marginRight="3dip"
    		android:layout_weight="1"
		    /> 
 </LinearLayout>
 
 <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    >
	<ImageView
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@+drawable/add_circle"
    		android:layout_gravity="center_vertical"
    		android:layout_marginLeft="10dip"
    		>
        </ImageView>
    	<TextView
    	    android:id="@+id/teacher_label"
			android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@+string/teacher"
			android:textSize="20sp"
    		android:textStyle="bold" 
    	    android:textColor="#707070"
    		android:paddingLeft="15dip"
    		>
		</TextView>
		<EditText 
		    android:id="@+id/teacher"
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:hint="@+string/teacher"
    		android:textSize="20sp"
    		android:padding="5dip"
    		android:layout_marginBottom="-5dip"
    		android:singleLine="true"
    		android:layout_weight="1"
		    />
		<EditText 
		    android:id="@+id/room"
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:hint="@+string/room"
    		android:textSize="20sp"
    		android:padding="5dip"
    		android:layout_marginLeft="8dip"
    		android:singleLine="true"
    		android:layout_weight="1"
		    />
 </LinearLayout>

 <TableLayout
    android:id="@+id/setupTimeTable"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:stretchColumns="2"
    >
    <TableRow>
         <ImageView
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@+drawable/add_circle"
    		android:layout_gravity="center_vertical"
    		android:layout_marginLeft="10dip"
    		>
        </ImageView>
    	<TextView
			android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@+string/contacts"
			android:textSize="20sp"
    		android:textStyle="bold" 
    	    android:textColor="#707070"
    		
    		android:paddingLeft="15dip"
    		android:paddingTop="15dip"
    		>
		</TextView>
		<EditText 
		    android:id="@+id/phone"
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:hint="@+string/phone"
			android:padding="5dip"
    		android:textSize="20sp"
    		android:layout_span="2"
    		android:singleLine="true"
    		android:inputType="textPhonetic"
		    />
	</TableRow>
	<TableRow>
		<EditText 
		    android:id="@+id/email"
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:hint="@+string/email"    		
    		android:textSize="20sp"
    		android:padding="5dip"
    		android:layout_column="2"
    		android:layout_span="2"
    		android:singleLine="true"
    		android:inputType="textEmailAddress"
		    />    
    </TableRow>
</TableLayout>
<com.uipeople.schedule.TimeTableControl 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:id="@+id/table" 
    android:background="#eeeeee" />
</LinearLayout>