<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@+drawable/shape_window"
    >
     
    <TableLayout 
        android:id="@+id/item"
        android:layout_width="250dip"
    	android:layout_height="wrap_content"
    	android:stretchColumns="1"
    	android:background="#42454A"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="100dip"
    	>
        <TableRow >
            <TextView 
                android:layout_column="1"
     		   	android:id="@+id/header"
		     	android:layout_width="wrap_content"
		     	android:layout_height="30dip"
		     	android:textColor="#f15b64"
		     	android:text="WED 3교시"
		     	android:textSize="20dip"
		     	android:gravity="center_vertical"
		     	android:paddingLeft="10dip"
		    />
            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"
		     	android:paddingRight="10dip" 
		     	android:src="@drawable/close"
		     	android:layout_gravity="center_vertical"
            />
            </TableRow>
	        <View 
	        android:id="@+id/header_line"
	        android:layout_height="1dip"
	        android:layout_width="fill_parent"
	        android:background="#646464"        
	        android:layout_margin="5dip"
	         />    
    
    <TextView 
        android:id="@+id/subject"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:text="과목명 : 화학"
     	android:paddingLeft="10dip"
     	android:textColor="#ffffff"
    />
    
    <TextView 
        android:id="@+id/teacher"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:text="선생님 : 김혜경"
     	android:paddingLeft="10dip"
     	android:textColor="#ffffff"
    />
    
    <TextView 
        android:id="@+id/room"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:text="교  실 : 2-3"
     	android:paddingLeft="10dip"
     	android:textColor="#ffffff"
    />
    
    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:src="@drawable/detail_1"
     	android:layout_gravity="center"
     	android:padding="10dip"
            />

    <LinearLayout
        android:id="@+id/moreDisplay"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/memo"
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:ems="10"
            android:hint="@+string/click_to_memo"
            android:paddingLeft="5dip" >
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

 		<ImageView
                android:id="@+id/sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/text_60x50"
                android:layout_marginLeft="10dip"
                android:padding="5dip" 
                />
            
            <ImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_60x50"
                android:padding="5dip"  
                />
                    
            <ImageView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" 
                android:src="@drawable/mail_60x50" 
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>

    </LinearLayout>

     <LinearLayout 
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
         >
     </LinearLayout>  	
     
    </TableLayout>
</RelativeLayout>