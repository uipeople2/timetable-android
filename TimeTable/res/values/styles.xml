<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
 
    <color name="light_font">#FBFBFB</color>
    <color name="grey_font">#ff9e9e9e</color>
    <color name="text_shadow">#7F000000</color>
    <color name="text_shadow_white">#FFFFFF</color>
    <color name="cream_dark">#000000</color>
    <color name="cream">#FFFFFF</color>
    <color name="lime">#C2DF20</color>
    <style name="Theme.Test" parent="android:Theme">
        <item name="android:tabWidgetStyle">@style/Widget.TabWidget</item>
    </style>
    <style name="Widget.TabWidget" parent="android:Widget.TabWidget">
         <item name="android:background">@drawable/friend_add_background</item>
    </style>
     <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
 	<item name="android:background">@drawable/friend_add_background</item>
 	<item name="android:backgroundStacked">@drawable/friend_add_background</item>
 	<item name="android:backgroundSplit">@drawable/friend_add_background</item>
 </style>
</resources>